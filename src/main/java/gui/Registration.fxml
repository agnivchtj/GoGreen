    <children>
        <ImageView fitHeight="450.0" fitWidth="700.0" layoutX="-1.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../files/gui/background.jpg" />
            </image>
        </ImageView>

        <TextField fx:id="textUsername" layoutX="266.0" layoutY="176.0" />
        <TextField fx:id="textEmailId" layoutX="266.0" layoutY="211.0" />
        <PasswordField fx:id="textPassword" layoutX="266.0" layoutY="246.0" />
        <Button fx:id="registerButton" layoutX="263.0" layoutY="309.0" mnemonicParsing="false" onAction="#registration" stylesheets="@style.css" text="Register" />
        <Label layoutX="184.0" layoutY="180.0" text="Username" textFill="WHITE" />
        <Label layoutX="184.0" layoutY="247.0" text="Password" textFill="WHITE" />
        <ImageView fitHeight="146.0" fitWidth="127.2" layoutX="14.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../files/gui/goGreenlogo.png" />
            </image>
        </ImageView>
        <Label layoutX="204.0" layoutY="280.0" prefHeight="17.0" prefWidth="167.0" text="Already have an account? Login" textFill="WHITE">
            <font>
                <Font size="11.0" />
            </font>
        </Label>
        <Hyperlink fx:id="linkRegister" layoutX="357.0" layoutY="278.0" onAction="#login" prefHeight="17.0" prefWidth="167.0" text="here" textFill="YELLOW">
